# Copy to backend.tf and fill in your bucket name
# Create S3 bucket and DynamoDB table first for state locking

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "devops-assignment/aws/terraform.tfstate"
    region         = "us-east-1"
    dynamodb_table = "terraform-state-lock"
    encrypt        = true
  }
}
